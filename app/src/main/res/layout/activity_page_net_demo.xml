<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/stub_actbar_orange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_actbar"
        android:inflatedId="@+id/id_actbar_orange" />

    <LinearLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_show_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show_content" />

        <Button
            android:id="@+id/btn_show_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show_loading" />

        <Button
            android:id="@+id/btn_show_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show_empty" />

        <Button
            android:id="@+id/btn_show_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show_error" />

        <Button
            android:id="@+id/btn_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="data" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewStub
            android:id="@+id/stub_empty_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/id_empty_orange" />

        <ViewStub
            android:id="@+id/stub_error_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/id_error_orange" />
    </FrameLayout>
</LinearLayout>